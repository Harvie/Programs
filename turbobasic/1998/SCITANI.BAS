SCREEN 0
CLS
COLOR 4,15
S=0
Z=0

LOCATE 4,23
PRINT "PROGRAM PRO ZKOUSENI SCITANI"
PRINT "                     "

V=TIMER
V=INT(((V-INT(V)+.2)*100))

FOR I=1 TO 15

A(I)=INT(RND*V+1)
A(I)=A(I)+1
B(I)=INT(RND*V+1)
B(I)=B(I)+1

VYP:
IF A(I)>=B(I) THEN C(I)=A(I)-B(I):D(I)=B(I):GOTO VYSL
REM pokud je B větší než A zmenší se
B(I)=INT(B(I)*.9)
B(I)=B(I)+1
GOTO VYP

VYSL:
REM aby druhý sčítanec nebyl 0
IF C(I)=O THEN A(I)=A(I)+2:GOTO VYP

REM VYSLEDEK JE V A(x)
LOCATE I+5,1
PRINT "                                   "
LOCATE I+5,4
PRINT "NAPIS VYSLEDEK" D(I) "+" C(I) "=":INPUT C

IF A(I)=C THEN ANO

LOCATE I+5,30
PRINT C
LOCATE I+5,34
PRINT "    SPATNY VYSLEDEK"
SOUND 1200,2
S=S+1
GOTO VOLBA

ANO:
LOCATE I+5,30
PRINT C
LOCATE I+5,34
PRINT "    SPRAVNE"
rem SOUND 600,2
Z=Z+1

VOLBA:
NEXT I

I=I-1
PRINT "Z" I "POKUSU MAS" S "SPATNYCH A" Z "DOBRYCH"

IF S=>4 THEN T=5
IF S=3 THEN T=4
IF S=2 THEN T=3
IF S=1 THEN T=2
IF S=0 THEN T=1
print "              "
PRINT "VYSLEDNA ZNAMKA" T

