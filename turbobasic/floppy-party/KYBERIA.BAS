SUB RNDLOC
	LOCATE 1+RND*22,1+RND*70
END SUB

SCREEN 8
PRINT "PLEASE DARKEN YOUR ROOM"
INPUT "READY FOR TRANSMISSION" R
DO
	LINE (320,100)-(RND*640,RND*200),34
	SOUND (0.1+RND)*500,RND*0.3
	R = RND*100
	IF R > 80 THEN COLOR 255,0: CALL RNDLOC: PRINT " JOIN KYBERIA.CZ! "
	IF R > 80 THEN COLOR 36,0: CALL RNDLOC: PRINT "K"
	IF R > 97 THEN COLOR 255,255: CLS: DELAY 0.1
	IF INKEY$<>"" THEN EXIT LOOP
LOOP
